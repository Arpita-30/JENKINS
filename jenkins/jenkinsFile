pipeline{
    agent any
    //agent { docker { image 'maven:3.6.3'}}
    //agent { docker {image 'node :13.8'}}
    environment{
        mavenHome=tool 'myMaven'
        PATH = "$mavenHome/bin:$PATH"
    }
    stages{
        stage('build'){
            steps{
                //sh 'node --version'
                sh 'mvn --version'
                //echo "mvn --version"
                echo "build"
                echo "$PATH"
                echo "BUILD_NUMBER - $env.BUILD_NUMBER"

            }
        }
        stage('test'){
            steps{
                echo "test"
            }
        }
        stage('integation test'){
            steps{
                echo "Intregation test"
            }
        }
    }
    
}